<h1>Listing Hotels</h1>
<div class="row">
  <div class="small-offset-3 small-6 columns">
    <input type="text" name="search" id="autocomplete" placeholder="Search for a hotel by name or address"/>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Star rating</th>
      <th>Accomodation type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.address %></td>
        <td><%=select_tag :star_rating, options_for_select((1..5).to_a, hotel.star_rating.to_i), :class=> "star-rating-disabled"%></td>
        <td><%= hotel.accomodation_type_name %></td>
        <td><%= link_to 'Show', hotel_path(hotel.id) %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel.id) %></td>
        <td><%= link_to 'Delete', hotel_path(hotel.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path, :class => "button large float-right" %>
